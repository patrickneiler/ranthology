{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ranthology/workspace/react": ["libs/workspace/react/src/index.ts"],
      "@ranthology/assistance/chat": ["libs/assistance/chat/src/index.ts"],
      "@ranthology/assistance/next": ["libs/assistance/next/src/index.ts"],
      "@ranthology/assistance/next/server": [
        "libs/assistance/next/src/server.ts"
      ],
      "@ranthology/assistance/ui": ["libs/assistance/ui/src/index.ts"],
      "@ranthology/assistance/util": ["libs/assistance/util/src/index.ts"],
      "@ranthology/ui/react": ["libs/ui/react/src/index.ts"],
      "@ranthology/workspace/config": ["libs/workspace/config/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
