{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@assistance/rsc/server": ["assistance/src/server.ts"],
      "@pathology/workspace/react": ["libs/workspace/react/src/index.ts"],
      "@ranthology/assistance/domain": ["libs/assistance/domain/src/index.ts"],
      "@ranthology/assistance/feature/next": [
        "libs/assistance/feature/next/src/index.ts"
      ],
      "@ranthology/assistance/feature/next/api": [
        "libs/assistance/feature/next/src/api.ts"
      ],
      "@ranthology/assistance/feature/react": [
        "libs/assistance/feature/react/src/index.ts"
      ],
      "@ranthology/assistance/feature/rsc": [
        "libs/assistance/feature/rsc/src/index.ts"
      ],
      "@ranthology/ui/react": ["libs/ui/react/src/index.ts"],
      "@ranthology/workspace/config": ["libs/workspace/config/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
