{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "workspace": {
            "type": "string"
        },
        "git": {
            "type": "object",
            "properties": {
                "repo": {
                    "type": "string"
                },
                "branch": {
                    "type": "string"
                },
                "url": {
                    "type": "string"
                }
            },
            "required": [
                "repo",
                "branch",
                "url"
            ]
        },
        "libs": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/LibConfig"
            }
        }
    },
    "required": [
        "workspace",
        "git",
        "libs"
    ],
    "definitions": {
        "LibConfig": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "features": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/FeatureConfig"
                    }
                },
                "state": {
                    "$ref": "#/definitions/StateConfig"
                },
                "readme": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "task": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "name",
                "type",
                "features",
                "state"
            ]
        },
        "FeatureConfig": {
            "type": "object",
            "properties": {
                "framework": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "importPath": {
                    "type": "string"
                },
                "generator": {
                    "type": "string"
                },
                "lib": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/LibModuleConfig"
                    }
                },
                "routes": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/RouteConfig"
                    }
                },
                "pages": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/PageConfig"
                    }
                },
                "readme": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "task": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "framework",
                "name",
                "importPath",
                "generator"
            ]
        },
        "LibModuleConfig": {
            "type": "object",
            "properties": {
                "module": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "options": {
                    "type": "string"
                },
                "helpers": {
                    "type": "string"
                },
                "generator": {
                    "type": "string"
                },
                "props": {
                    "type": "string"
                },
                "state": {
                    "type": "string"
                },
                "children": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/LibModuleConfig"
                    }
                },
                "importPath": {
                    "type": "string"
                },
                "readme": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "task": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "module",
                "type"
            ]
        },
        "RouteConfig": {
            "type": "object",
            "properties": {
                "module": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "path": {
                    "type": "string"
                },
                "readme": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "task": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "module",
                "type",
                "path"
            ]
        },
        "PageConfig": {
            "type": "object",
            "properties": {
                "module": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "generator": {
                    "type": "string"
                },
                "children": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/LibModuleConfig"
                    }
                },
                "importPath": {
                    "type": "string"
                },
                "readme": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "task": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "module",
                "type",
                "generator"
            ]
        },
        "StateConfig": {
            "type": "object",
            "properties": {
                "framework": {
                    "type": "string"
                },
                "importPath": {
                    "type": "string"
                },
                "generator": {
                    "type": "string"
                },
                "exports": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/ExportConfig"
                    }
                },
                "readme": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "task": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "framework",
                "importPath",
                "generator",
                "exports"
            ]
        },
        "ExportConfig": {
            "type": "object",
            "properties": {
                "module": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "props": {
                    "type": "object",
                    "additionalProperties": true
                }
            },
            "required": [
                "module",
                "type"
            ]
        }
    }
}