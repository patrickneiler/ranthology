{
  "name": "workspace-config",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/workspace/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/workspace",
        "main": "libs/workspace/src/index.ts",
        "tsConfig": "libs/workspace/tsconfig.lib.json",
        "assets": ["libs/workspace/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs workspace-config {args.ver} {args.tag}",
      "dependsOn": ["build"]
    }
  },
  "tags": ["workspace"]
}
